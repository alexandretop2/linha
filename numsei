local maxSpeed = 200  -- Velocidade máxima do carro (em Studs/s)
local accelerationMultiplier = 2  -- Multiplicador da aceleração

game.Players.PlayerAdded:Connect(function(player)
    player.CharacterAdded:Connect(function(character)
        local vehicleSeat = nil

        -- Monitorar se o jogador entra em um veículo
        character.ChildAdded:Connect(function(child)
            if child:IsA("Humanoid") then
                child.Seated:Connect(function(active, seat)
                    if active and seat:IsA("VehicleSeat") then
                        vehicleSeat = seat
                        vehicleSeat.MaxSpeed = maxSpeed
                        vehicleSeat.Torque = vehicleSeat.Torque * accelerationMultiplier
                    end
                end)
            end
        end)
    end)
end)
